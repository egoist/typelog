var log = require('./')

register('deploy', ['git', 'publish'])

register('log', () => {
  log.info('I\'m some information')
  log.error('You did something that wrong')
  log.warn('Please do not hate me')
  log.success('You finally got that girlfriend')
})

register('git', () => {
  var message = argv._[1] || 'update'
  exec('git add -A')
  exec(`git commit -m "${message}"`)
  exec('git push origin master')
})

alias('publish', 'npm publish')
